{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "declaration": false,
    "newLine": "lf"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*",
    ".idea/**/*",
    ".eslintrc.js",
    ".gitignore",
    ".prettierrc.js",
    "bitbucket-pipelines.yml"
  ]
}
